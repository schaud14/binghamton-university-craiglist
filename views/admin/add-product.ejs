<% layout('layout') -%>

<div class="row">
  <div class="col-lg-6 col-md-offset-3">

    <% if (message.length > 0) { %>
      <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismmiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= message %>
      </div>
    <% } %>

    <form method="post">

      <h1> Add Product </h1>
      <div class="form-group">
        <label="name" class='textcolor'>Product Name: </label>
        <input type="text" class="form-control"   name="name" style="width:400px;">
      </div>
      <div class="form-group" class='textcolor'>
        <label="price">Price: </label>
        <input type="text" class="form-control" name="price" style="width:400px;">
      </div>
      <!-- <div class="form-group" >
        <form method="post" enctype="multipart/form-data" >
          <input type="file" name="file">
        </form>
      </div> -->
      <div class="form-group" class='textcolor'>
        <label="description">description </label>
        <input type="text" class="form-control" name="description" style="width:400px;">
      </div>
      <div class="form-group">
        <label="image" class='textcolor'>Image Name </label>
        <input type="text" class="form-control"  name="image" style="width:400px;">
      </div>
      <div class="form-group">
        <label ="category" class='textcolor'>Category</label>
        <select class = "selectpicker"id="categorylist" name="category">
          <% for (var i = 0; i < categories.length; i++)  { %>
            <!-- <a href="/products/<%= categories[i]._id %>"><%= categories[i].name %></a></li> -->
             <option value="<%= categories[i].name %>"><%= categories[i].name %></option>
          <% } %>
        </select>
      </div>

      <button type="submit" class="btn btn-success">Submit</button>

    </form>
  </div>
</div>
