<% layout('layout') -%>
<% if (data.length === 0)  { %>
  <h3 class='textcolor text-center'>Search not found</h3>
<% } else {%>
  <h3 class='textcolor text-center'>Results for <%= query %></h3>

  <div class="container">
  <div class="row">

    <% for (var i = 0; i < data.length; i++) { %>
    <div class="col-md-4">
      <a href="/product/<%= data[i]._id %>">
        <div class="thumbnail" style="{width:200px;height:200px;}">
          <img src="<%= data[i].image %>" height="300" width="300">
          <div class="caption">
            <h3><%= data[i].name %></h3>
            <!-- <p><%= data[i].category._id %></h3> -->
            <p>$<%= data[i].price %></p>
          </div>
        </div>
      </a>
    </div>
    <% } %>
  </div>
</div>



<% } %>
